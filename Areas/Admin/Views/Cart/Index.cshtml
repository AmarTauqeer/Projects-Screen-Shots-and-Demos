@using System.Configuration
@model List<ShoppingCartWithAdmin.Areas.Admin.Models.CartViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Html.Raw(TempData["totalQty"]) != null)
{
    Html.Raw(TempData["totalQty"]);
}

<h2>Shopping Cart</h2>

<table class="table" id="shoppingcart">
    <tr>
        <th>
            Product Title
        </th>
        <th>
            Image
        </th>

        <th>
            Qty
        </th>
        <th>
            Price
        </th>
        <th>
            Amount
        </th>
        <th>
            Date Time
        </th>
        <th></th>


    </tr>
    @if (Model != null)
    {
        var totqty = 0;
        var totamt = 0;
        foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        <img src="~/Image/@item.ImageURL" height="50" width="50" />
                    </td>
                    <td>
                        <input type="text" class="qty" value=@item.Qty size="4" style="text-align:center" />
                    </td>
                    <td>
                        <input type="text" class="price" value=@item.Price size="4" style="text-align:right" disabled="disabled" />
                    </td>
                    <td>
                        @if (item.Qty != 0)
                        {
                            var amt = item.Qty * item.Price;
                            <input type="text" class="amt" value="@amt" size="4" style="text-align:right" disabled="disabled" />
                        }

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td>
                        @Html.ActionLink("Remove", "Delete", new { id = item.CartId })
                    </td>
                </tr>
            </tbody>
                        totqty += item.Qty;
                        totamt += item.Qty * item.Price;
        }
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td><input type="text" class="grdtotqty" value="@totqty" name="" size="4" style="text-align:center" disabled="disabled" /></td>
            <td>&nbsp;</td>
            <td><input type="text" class="grdtot" value="@totamt" name="" size="4" style="text-align:right" disabled="disabled" /></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    }
</table>
<div class="col-md-12">
    <div>
        <form action="@ConfigurationManager.AppSettings["urlSubmitPayment"]">
            <input type="hidden" name="cmd" value="_cart" />
            <input type="hidden" name="upload" value="1" />
            <input type="hidden" name="return" value="@ConfigurationManager.AppSettings["urlReturn"]" />
            <input type="hidden" name="business" value="@ConfigurationManager.AppSettings["accountBusiness"]" />
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" name="@Url.Content("item_name_"+(i+1))" value="@Model[i].ProductName" />
                <input type="hidden" name="@Url.Content("item_number_"+(i+1))" value="@Model[i].ProductId" />
                <input type="hidden" name="@Url.Content("amount_"+(i+1))" value="@Model[i].Price" />
                <input type="hidden" name="@Url.Content("quantity_"+(i+1))" value="@Model[i].Qty" />
            }
            <br />
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary col-md-12" value="Checkout now" />
            </div>
        </form>
    </div>
    @*@Html.ActionLink("Checkout", "Checkout", new { controller = "Cart" }, new { @class = "btn btn-primary" })*@
</div>
@section Scripts
{
    <script src="//code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script type="text/javascript">

        var $tblrows = $("#shoppingcart tbody tr");
        $tblrows.each(function (index) {
            var $tblrow = $(this);
            //change event of qty
            $tblrow.find('input.qty').on('change', function () {

                var qty = $tblrow.find('input.qty').val();
                var price = $tblrow.find('input.price').val();

                //calculate price
                var subTotal = parseInt(qty, 10) * parseFloat(price);
                if (!isNaN(subTotal)) {

                    //assign to subtotal
                    $tblrow.find('input.amt').val(subTotal);
                    var grandTotalqty = 0;
                    var grandTotal = 0;

                    //calculate grand total amount
                    $("input.qty").each(function () {
                        var stval = parseFloat($(this).val());
                        grandTotalqty += isNaN(stval) ? 0 : stval;
                    });
                    //assign calculated value to grand total
                    $('.grdtotqty').val(grandTotalqty);


                    //calculate grand total amount
                    $(".amt").each(function () {
                        var stval = parseFloat($(this).val());
                        grandTotal += isNaN(stval) ? 0 : stval;
                    });
                    //assign calculated value to grand total
                    $('.grdtot').val(grandTotal);
                }

            });
        });



    </script>
}
