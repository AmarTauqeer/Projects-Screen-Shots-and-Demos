@model IEnumerable<ShoppingCartWithAdmin.Areas.Admin.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminPanelLayout.cshtml";
}
@* check for session if null the login *@
@if (Session["UserName"] == null)
{
    Response.Redirect("~/Admin/Admin/Login");
}
<h2>Category</h2>

<p>
    @Html.ActionLink("Add", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CatTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CatId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CatId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CatId })
        </td>
    </tr>
}

</table>
