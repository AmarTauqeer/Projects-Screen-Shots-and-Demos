<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Penel</title>
    <!-- BOOTSTRAP STYLES-->
    <link href=@Url.Content("/Areas/Admin/Content/assets/css/bootstrap.css") rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href=@Url.Content("/Areas/Admin/Content/assets/css/font-awesome.css") rel="stylesheet" />
    ><!-- CUSTOM STYLES-->
    <link href=@Url.Content("/Areas/Admin/Content/assets/css/custom.css") rel="stylesheet" />
    ><!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                    <a class="navbar-brand" href="#">
                        <img src=@Url.Content("~/Areas/Admin/Content/assets/img/Admin_logo.png") width="100" height="100" />
                    </a>

                </div>

                <span class="logout-spn">
                    @if (Session["UserName"] != null)
                    {
                        <strong>Welcome @Session["UserName"].ToString()</strong>
                        <span>| </span>
                        @Html.ActionLink("SignOut", "Logout", "Admin")
                    }

                </span>
            </div>
        </div>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        @Html.ActionLink("Home", "Index","Admin/Index")
                    </li>
                    <li>
                        @Html.ActionLink("Category", "Index","Category")
                    </li>
                    <li>
                        @Html.ActionLink("Product", "Index","Product")
                    </li>
                    <li>
                        @Html.ActionLink("Users", "Index", "Users")
                    </li>

                </ul>
            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-lg-12">
                        <h3>ADMIN DASHBOARD</h3>
                    </div>
                </div>
                <!-- /. ROW  -->
                <hr />
                <div class="row">
                    <div class="col-lg-12 ">
                        @RenderBody()
                    </div>
                </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
        <!-- /. WRAPPER  -->
        <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
        <!-- JQUERY SCRIPTS -->
        <script src=@Url.Content("/Areas/Admin/Content/assets/js/jquery-1.10.2.js")></script>
        <!-- BOOTSTRAP SCRIPTS -->
        <script src=@Url.Content("/Areas/Admin/Content/assets/js/bootstrap.min.js")></script>
        <!-- CUSTOM SCRIPTS -->
        <script src=@Url.Content("/Areas/Admin/Content/assets/js/custom.js")></script>
    </div>

</body>
</html>
