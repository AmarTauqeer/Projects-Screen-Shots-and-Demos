@model OrderManagement.Models.Orders

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Index</h2>

<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewOrder(0)">Add New Product</a> <br /><br />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Qty</th>
                <th>Rate</th>
                <th>Action(Delete)</th>

            </tr>
        </thead>
        <tbody id="OrderDetail">
            <tr id="LoadingStatus" style="color:red"></tr>
        </tbody>
    </table>
    @*Create A Popup Modal With Registration Form For Add Or Edit Student Record*@

    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.OrderId, new { @id = "OrderId" })
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.ProdId, ViewBag.ListOfProduct as SelectList, "--Select Product--", new { @id = "DropDwn", @class = "form-control" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Qty, new { @id = "Qty", @class = "form-control", @placeholder = "Qty*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ProductRate, new { @id = "ProductRate", @class = "form-control", @placeholder = "ProductRate*" })
                            </div>
                            <div class="form-group">
                                <a href="#" class="btn btn-block btn-danger" id="SaveOrderRecord">Save</a>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#LoadingStatus").html("Loading....");
    $.get("/Order/GetOrderList", null, DataBind);
    function DataBind(OrderList) {
        //This Code For Receive All Data From Controller And Show It In Client Side
        var SetData = $("#OrderDetail");
        for (var i = 0; i < OrderList.length; i++) {
            var Data = "<tr class='row_" + OrderList[i].OrderId + "'>" +
                "<td>" + OrderList[i].OrderId + "</td>" +
                "<td>" + OrderList[i].ProdId + "</td>" +
                "<td>" + OrderList[i].ProductName + "</td>" +
                "<td>" + OrderList[i].Qty + "</td>" +
                "<td>" + OrderList[i].ProductRate + "</td>" +
                "<td>" + "<a href='#' class='btn btn-warning' onclick='EditOrderRecord(" + OrderList[i].OrderId + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteStudentRecord(" + OrderList[i].OrderId + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                "</tr>";
            SetData.append(Data);
            $("#LoadingStatus").html(" ");

        }
    }
        //Show The Popup Modal For Add New Student

        function AddNewOrder(OrderId) {
            $("#form")[0].reset();
            $("#OrderId").val(0);
            $("#DropDwn option:selected").text("--Select Product--");
            $("#ModalTitle").html("Add New Product");
            $("#MyModal").modal();

        }
        //Show The Popup Modal For Edit Student Record

        function EditOrderRecord(OrderId) {
            var url = "/Order/GetOrderById?OrderId=" + OrderId;
            $("#ModalTitle").html("Update Order Record");
            $("#MyModal").modal();
            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    var obj = JSON.parse(data);
                    $("#OrderId").val(obj.OrderId);
                    $("#DropDwn option:selected").text(obj.tblProduct.ProductName);
                    $("#DropDwn option:selected").val(obj.ProdId);
                    $("#Qty").val(obj.Qty);
                    $("#ProductRate").val(obj.ProductRate);

                }
            })
        }


</script>