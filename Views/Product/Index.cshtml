@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<h2>Product Detail</h2>
<br />
<table class="table table-bordered table-striped">
    <tr>
        <th>Product Id</th>
        <th>Product name</th>
        <th>Category</th>
        <th>Product rate</th>
        <th>Units</th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>

            <td>
                <a href="@Url.Action("Edit", "Product", new {@id=@Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("Delete", "Product", new { @id = @Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Product")">Add new product</a>


