@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<h2>User Detail</h2>
<br />
<table class="table table-bordered table-striped">
    <tr>
        <th>User Id</th>
        <th>User name</th>
        <th>Full name</th>
        <th>City</th>
        <th>Address</th>
        <th>Email</th>
        <th></th>
    </tr>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][7]</td>

            <td>
                <a href="@Url.Action("Edit", "User", new {@id=@Model.Rows[i][0] })">Edit</a>
                <a href="@Url.Action("Delete", "User", new { @id = @Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "User")">Add new user</a>


